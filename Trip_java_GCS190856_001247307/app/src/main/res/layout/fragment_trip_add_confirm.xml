<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.trip.AddTripConfirmFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/switchRiskAssessment"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:text="@string/risk_assessment"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripDescription"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textViewTripDescription"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textViewTripName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_name"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripName3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripName3" />

            <TextView
                android:id="@+id/textViewTripName3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="16dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_name"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_card_travel_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTripName4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_destination"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_black"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textViewTripName7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/people_number"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_black"
                app:layout_constraintBottom_toBottomOf="@+id/textViewTripName2"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewTripName2"
                app:layout_constraintTop_toTopOf="@+id/textViewTripName2" />

            <TextView
                android:id="@+id/textViewTripName2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_type"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_airplane_ticket_24"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textViewTripName5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/date_of_the_trip"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_calendar_month_black"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textViewTripName6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="15dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_description"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_description_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textViewTripDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_destination"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textViewTripName4"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripName4" />

            <TextView
                android:id="@+id/textViewTripPeopleTypeNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/people_number"
                app:layout_constraintBottom_toBottomOf="@+id/textViewTripType"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textViewTripType"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripName7" />

            <TextView
                android:id="@+id/textViewTripType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_type"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripName2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textViewTripName2"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripName2" />

            <TextView
                android:id="@+id/textViewDateOfTrip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/date_of_the_trip"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripName5" />

            <TextView
                android:id="@+id/textViewTripDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="16dp"
                android:text="@string/trip_description"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripName6"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripName6" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bg"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripName"
                app:layout_constraintStart_toStartOf="@+id/textViewTripName"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:background="@drawable/textview_bg"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripDestination"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewTripDestination"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripDestination" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:background="@drawable/textview_bg"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripName7"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewTripType"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripType" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:background="@drawable/textview_bg"
                app:layout_constraintEnd_toEndOf="@+id/textViewDateOfTrip"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewTripDestination"
                app:layout_constraintTop_toBottomOf="@+id/textViewDateOfTrip" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:background="@drawable/textview_bg"
                app:layout_constraintEnd_toEndOf="@+id/textViewTripDescription"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewTripDescription"
                app:layout_constraintTop_toBottomOf="@+id/textViewTripDescription" />

            <Button
                android:id="@+id/confirmButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/confirm"
                app:layout_constraintEnd_toEndOf="@+id/switchRiskAssessment"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/switchRiskAssessment"
                app:layout_constraintTop_toBottomOf="@+id/switchRiskAssessment" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>